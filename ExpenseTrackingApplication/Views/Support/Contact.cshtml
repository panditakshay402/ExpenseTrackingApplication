@{
    ViewData["Title"] = "Contact Support";
}

<h1>@ViewData["Title"]</h1>

<div class="contact-content">
    <p>
        We are here to help! If you have any questions or need assistance, please don't hesitate to reach out to us. You can contact us via the form below or use the information provided.
    </p>

    <h2>Contact Information</h2>
    <ul>
        <li><strong>Email:</strong> support@etracking.com</li>
        <li><strong>Phone:</strong> +1 (123) 456-7890</li>
        <li><strong>Office Hours:</strong> Monday to Friday, 8 AM - 6 PM (CEST)</li>
    </ul>

    <h2>Contact Form</h2>
    <p>Please fill out the form below to send us a message:</p>

    <form method="post" action="/Support/SubmitContact">
        <div class="form-group">
            <label for="Name">Name:</label>
            <input type="text" id="Name" name="Name" required class="form-control">
        </div>
        <div class="form-group">
            <label for="Email">Email:</label>
            <input type="email" id="Email" name="Email" required class="form-control">
        </div>
        <div class="form-group">
            <label for="Message">Message:</label>
            <textarea id="Message" name="Message" required class="form-control" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>